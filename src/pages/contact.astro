---
import BaseLayout from '@/layouts/BaseLayout.astro'

const contacts = [
  {
    name: 'Email',
    value: 'ggrigoti@gmail.com',
    href: 'mailto:ggrigoti@gmail.com',
  },
  {
    name: 'GitHub',
    value: 'github.com/rigottig',
    href: 'https://github.com/rigottig',
  },
  {
    name: 'LinkedIn',
    value: 'linkedin.com/in/rigottig',
    href: 'https://linkedin.com/in/rigottig',
  },
]
---

<BaseLayout
  title="Contact | Guilherme Rigotti"
  description="Get in touch with Guilherme Rigotti"
  currentPath="/contact"
>
  <div class="space-y-10">
    <!-- Header -->
    <section>
      <h1 class="text-xl font-semibold text-neutral-100 mb-2">Contact</h1>
      <p class="text-neutral-500 text-sm max-w-md">
        I'm always open to discussing new projects, opportunities, or just having a chat about technology.
      </p>
    </section>

    <!-- Contact Methods -->
    <section>
      <h2 class="text-xs uppercase tracking-wider text-neutral-500 mb-4">Get in touch</h2>
      <div class="space-y-3">
        {contacts.map((contact) => (
          <a
            href={contact.href}
            target={contact.href.startsWith('mailto') ? undefined : '_blank'}
            rel={contact.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
            class="group flex items-center justify-between gap-4 py-3 -mx-2 px-2 rounded-md hover:bg-neutral-800/30 transition-colors"
          >
            <div>
              <span class="text-sm text-neutral-200 group-hover:text-green-400 transition-colors">
                {contact.name}
              </span>
              <p class="text-xs text-neutral-500">{contact.value}</p>
            </div>
            <span class="text-neutral-600 group-hover:text-green-400 transition-colors">→</span>
          </a>
        ))}
      </div>
    </section>

    <!-- Availability -->
    <section>
      <h2 class="text-xs uppercase tracking-wider text-neutral-500 mb-4">Availability</h2>
      <div class="p-4 rounded-lg border border-neutral-800 bg-neutral-900/30">
        <div class="flex items-center gap-2 mb-3">
          <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
          <span class="text-sm text-green-400">Available for opportunities</span>
        </div>
        <div class="grid grid-cols-2 gap-4 text-xs">
          <div>
            <span class="text-neutral-500">Location</span>
            <p class="text-neutral-300">Brazil (UTC-3)</p>
          </div>
          <div>
            <span class="text-neutral-500">Response time</span>
            <p class="text-neutral-300">Within 24 hours</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Email CTA -->
    <section class="pt-2">
      <div class="p-4 rounded-lg border border-neutral-800 bg-neutral-900/30">
        <p class="text-neutral-300 text-sm mb-3">
          Let's work together!
        </p>
        <a
          href="mailto:ggrigoti@gmail.com"
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-neutral-900 bg-green-500 rounded-md hover:bg-green-400 transition-colors"
        >
          Send email
        </a>
      </div>
    </section>

    <!-- Back -->
    <nav class="pt-4 border-t border-neutral-800">
      <a
        href="/"
        class="text-sm text-neutral-500 hover:text-green-400 transition-colors"
      >
        ← Back to home
      </a>
    </nav>
  </div>
</BaseLayout>
