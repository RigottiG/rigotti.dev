---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Schema from '@/components/Schema.astro'
import { getCollection } from 'astro:content'

const allPosts = await getCollection('post')
const latestPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3)
---

<BaseLayout
  title="Guilherme Rigotti â€” Software Engineer"
  description="Senior Software Engineer from Brazil. Building scalable frontend applications and exploring system design."
>
  <Schema type="Person" />

  <div class="space-y-8">
    <!-- Intro Section -->
    <section class="space-y-4">
      <div class="flex items-center gap-2 text-green-600 dark:text-green-500">
        <span>âžœ</span>
        <span class="text-blue-400">~</span>
        <span class="text-neutral-700 dark:text-neutral-300">whoami</span>
      </div>

      <div class="pl-4 border-l-2 border-neutral-300 dark:border-neutral-800 space-y-2">
        <h1 class="text-xl text-neutral-900 dark:text-neutral-100 font-bold">Guilherme Rigotti</h1>
        <p class="text-neutral-700 dark:text-neutral-400 max-w-lg">
          Senior Software Engineer from Brazil ðŸ‡§ðŸ‡·. <br/>
          Building scalable frontend applications and exploring the depths of system design.
        </p>
      </div>
    </section>

    <!-- Skills "Array" -->
    <section class="space-y-2">
      <div class="flex items-center gap-2 text-green-600 dark:text-green-500">
        <span>âžœ</span>
        <span class="text-blue-400">~</span>
        <span class="text-neutral-700 dark:text-neutral-300">ls ./skills</span>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 pl-4 text-xs text-neutral-600 dark:text-neutral-400">
        <span>typescript.ts</span>
        <span>react.jsx</span>
        <span>astro.build</span>
        <span>go.mod</span>
        <span>docker-compose.yml</span>
        <span>neovim.lua</span>
      </div>
    </section>

    <!-- Experience -->
    <section class="space-y-4">
      <div class="flex items-center gap-2 text-green-600 dark:text-green-500">
        <span>âžœ</span>
        <span class="text-blue-400">~</span>
        <span class="text-neutral-700 dark:text-neutral-300">cat ./experience.json</span>
      </div>

      <div class="pl-4 space-y-3">
        <div class="flex items-start justify-between gap-4">
          <div>
            <div class="flex items-center gap-2">
              <span class="text-neutral-900 dark:text-neutral-200 text-sm">Axur</span>
              <span class="flex items-center gap-1.5 text-xs text-green-600 dark:text-green-400">
                <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
                now
              </span>
            </div>
            <span class="text-neutral-600 dark:text-neutral-500 text-xs">Senior Frontend Developer</span>
          </div>
          <span class="text-xs text-neutral-600 shrink-0">2023 - Present</span>
        </div>

        <div class="flex items-start justify-between gap-4">
          <div>
            <span class="text-neutral-900 dark:text-neutral-200 text-sm">CWI Software</span>
            <div class="text-neutral-600 dark:text-neutral-500 text-xs">Frontend Developer</div>
          </div>
          <span class="text-xs text-neutral-600 shrink-0">2019 - 2023</span>
        </div>

        <div class="flex items-start justify-between gap-4">
          <div>
            <span class="text-neutral-900 dark:text-neutral-200 text-sm">Mave Tecnologia</span>
            <div class="text-neutral-600 dark:text-neutral-500 text-xs">Fullstack Developer</div>
          </div>
          <span class="text-xs text-neutral-600 shrink-0">2018 - 2019</span>
        </div>

        <a href="/about" class="inline-block mt-2 text-sm text-green-600 dark:text-green-400 hover:text-green-300 transition-colors">
          cat ./resume.pdf â†’
        </a>
      </div>
    </section>

    <!-- Latest Logs (Posts) -->
    {latestPosts.length > 0 && (
      <section class="space-y-4 pt-4">
        <div class="flex items-center gap-2 text-green-600 dark:text-green-500">
          <span>âžœ</span>
          <span class="text-blue-400">~</span>
          <span class="text-neutral-700 dark:text-neutral-300">tail -n 3 ./blog/logs</span>
        </div>

        <div class="space-y-3 pl-4">
          {latestPosts.map((post) => {
            const postDate = new Date(post.data.date);
            return (
              <a href={`/blog/post/${post.slug}`} class="block group">
                <div class="flex items-baseline justify-between gap-4">
                  <span class="text-neutral-700 dark:text-neutral-300 group-hover:text-green-600 dark:text-green-400 group-hover:underline decoration-green-500/30 underline-offset-4 transition-all">
                    {post.data.title}
                  </span>
                  <span class="text-xs text-neutral-600 shrink-0 font-mono">
                    {postDate.toISOString().split('T')[0]}
                  </span>
                </div>
              </a>
            )
          })}
        </div>

        <a href="/blog" class="inline-block pl-4 text-sm text-green-600 dark:text-green-400 hover:text-green-300 transition-colors">
          ls -la ./blog â†’
        </a>
      </section>
    )}

    <!-- Contact CTA -->
    <section class="pt-4">
      <div class="flex items-center gap-2 text-green-600 dark:text-green-500 mb-4">
        <span>âžœ</span>
        <span class="text-blue-400">~</span>
        <span class="text-neutral-700 dark:text-neutral-300 cursor-blink">_</span>
      </div>

      <div class="pl-4 p-4 rounded-lg border border-neutral-300 dark:border-neutral-800 bg-neutral-100 dark:bg-neutral-900/30">
        <p class="text-neutral-800 dark:text-neutral-300 text-sm mb-3">
          # Interested in working together?
        </p>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-neutral-900 bg-green-600 dark:bg-green-500 rounded-md hover:bg-green-700 dark:hover:bg-green-400 transition-colors"
        >
          ./contact --send
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
