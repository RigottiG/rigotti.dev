---
const currentYear = new Date().getFullYear()

const links = [
  { name: 'GitHub', href: 'https://github.com/rigottig' },
  { name: 'LinkedIn', href: 'https://linkedin.com/in/rigottig' },
  { name: 'Email', href: 'mailto:ggrigoti@gmail.com' },
]
---

<footer class="mt-12 pt-6 border-t border-neutral-800">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <!-- Links -->
    <div class="flex items-center gap-4">
      {links.map((link) => (
        <a
          href={link.href}
          target={link.href.startsWith('mailto') ? undefined : '_blank'}
          rel={link.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
          class="text-sm text-neutral-500 hover:text-green-400 transition-colors"
        >
          {link.name}
        </a>
      ))}
    </div>

    <!-- Status & Copyright -->
    <div class="flex items-center gap-4 text-sm text-neutral-600">
      <span class="flex items-center gap-2">
        <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
        Available
      </span>
      <span>Â© {currentYear}</span>
    </div>
  </div>
</footer>
