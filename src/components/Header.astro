---
const navItems = [
  { href: '/', label: '~/home', cmd: 'cd ~' },
  { href: '/blog', label: '~/blog', cmd: 'cd blog' },
  { href: '/about', label: '~/about', cmd: 'cat about' },
  { href: '/contact', label: '~/contact', cmd: 'mail' },
]

const currentPath = Astro.url.pathname;
---

<header class="mb-8 font-mono text-sm">
  <nav class="flex flex-wrap gap-x-6 gap-y-2">
    {navItems.map((item) => {
      const isActive = currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href));
      return (
        <a
          href={item.href}
          aria-current={isActive ? 'page' : undefined}
          class:list={[
            'group relative transition-colors',
            isActive ? 'text-green-600 dark:text-green-400 font-bold' : 'text-neutral-600 dark:text-neutral-500 hover:text-neutral-900 dark:hover:text-neutral-300'
          ]}
        >
          <span class="opacity-0 group-hover:opacity-100 absolute -left-3 text-green-600 dark:text-green-500 transition-opacity">
            &gt;
          </span>
          {isActive ? `./${item.label.replace('~/', '')}` : item.label}
        </a>
      )
    })}
  </nav>
  <div class="h-px w-full bg-neutral-300 dark:bg-neutral-800 mt-4 transition-colors"></div>
</header>
